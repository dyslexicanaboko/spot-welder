<Application x:Class="SpotWelder.Ui.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             ShutdownMode="OnExplicitShutdown"
             >
    <!-- 
        Removed the StartupUri so I can use Dependency Injection instead. 
        https://docs.simpleinjector.org/en/latest/wpfintegration.html
    -->
    <!-- StartupUri="QueryToClassWindow.xaml" -->
  <Application.Resources>
    <Style x:Key="TextBoxCodeFont" TargetType="TextBox">
      <Setter Property="Background" Value="Black" />
      <Setter Property="Foreground" Value="White" />
      <Setter Property="FontFamily" Value="Courier New" />
      <Setter Property="FontSize" Value="14"/>
    </Style>
    <Style x:Key="TextBlockCodeFont" TargetType="TextBlock">
      <Setter Property="Background" Value="Black" />
      <Setter Property="Foreground" Value="White" />
      <Setter Property="FontFamily" Value="Courier New" />
      <Setter Property="FontSize" Value="14"/>
    </Style>
    <BitmapImage x:Key="Copy" UriSource="images/Copy_16x.png" />
    <BitmapImage x:Key="SaveAs" UriSource="images/SaveAs_16x.png" />
    <Style x:Key="BaseButtonImage" TargetType="Image">
      <Setter Property="Width" Value="16" />
      <Setter Property="Height" Value="16" />
    </Style>
    <Style x:Key="ImageCopy" TargetType="Image" BasedOn="{StaticResource BaseButtonImage}">
      <Setter Property="Source" Value="{StaticResource Copy}" />
    </Style>
    <Style x:Key="ImageSaveAs" TargetType="Image" BasedOn="{StaticResource BaseButtonImage}">
      <Setter Property="Source" Value="{StaticResource SaveAs}" />
    </Style>
  </Application.Resources>
</Application>
