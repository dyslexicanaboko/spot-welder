<Window x:Class="SpotWelder.Ui.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ResultWindow" Height="548" Width="528">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" MinWidth="18"/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition MinHeight="100" />
      <RowDefinition Height="30" />
    </Grid.RowDefinitions>
    <TextBlock x:Name="LineNumbers"
               Grid.Row="0"
               Grid.Column="0"
               Style="{StaticResource TextBlockCodeFont}"
               Background="SlateGray"
               Text="01" VerticalAlignment="Top"/>
    <TextBox Name="TxtResult"
               Grid.Row="0"
               Grid.Column="1"
               IsReadOnly="True" 
               IsReadOnlyCaretVisible="True" 
               HorizontalContentAlignment="Stretch" 
               HorizontalScrollBarVisibility="Auto" 
               VerticalContentAlignment="Stretch" 
               VerticalScrollBarVisibility="Auto" 
               Style="{StaticResource TextBoxCodeFont}"
               Margin="0,0,0,4" />
    <ToolBarTray Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Height="29" VerticalAlignment="Center">
      <ToolBar >
        <!-- Just a reminder that the images don't show in the preview, but they will render -->
        <Button Name="BtnCopy" Click="BtnCopy_Click">
          <Image Style="{StaticResource ImageCopy}" ToolTip="Copy to clipboard" />
        </Button>
        <Button Name="BtnSave" Click="BtnSave_OnClick">
          <Image Style="{StaticResource ImageSaveAs}" ToolTip="Save as..." />
        </Button>
        | Go to <TextBox Name="TxtGoToLine" Text="" Width="30" KeyDown="TxtGoToLine_OnKeyDown" BorderThickness="1" BorderBrush="Black" />
        | Find
        <TextBox Name="TxtSearchText" Text="" Width="100" KeyDown="TxtFind_OnKeyDown" BorderThickness="1" BorderBrush="Black" />
      </ToolBar>
    </ToolBarTray>
  </Grid>
</Window>
